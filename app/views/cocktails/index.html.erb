<% unless @search %>
  <div id="title">
    <h1>Ed's Cocktails</h1>
    <p>
      <span id="typed-text"></span>
    </p>
  </div>
<% end %>

<div class="container">
  <div class="cards-grid center py-5 rounded shadow">
    <% if @cocktails.empty? %>
      <p>No cocktail matches found</p>
    <% else %>
      <% @cocktails.each do |cocktail| %>
        <%= link_to cocktail_path(cocktail) do %>
          <div class="card-category py-3" style="background-image: linear-gradient(to bottom, rgba(0,0,0,0.1), rgba(0,0,0,0.9)), url('<%= cl_image_path cocktail.photo.key, transformation: [{crop: "crop", width: 900, height:1400},{width: 200, hight: 300, gravity: 'auto', crop: "fill", quality: 100}] %>')">
            <%= cocktail.name %>
          </div>
        <% end %>
      <% end  %>
    <% end %>
  </div>
  <%= link_to 'show more Originals', root_path, class: "btn btn-outline-secondary my-2 my-sm-0" %>
</div>
