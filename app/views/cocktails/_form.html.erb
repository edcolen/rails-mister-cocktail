<%= simple_form_for :search, url: cocktails_path, method: "GET", html: { class: 'form-inline my-2 my-lg-0' } do |f| %>
  <%= f.input :name, label: false, input_html: { placeholder: "Find a cocktail", value: ""}, class: "form-control mr-sm-2" %>
  <%= f.submit "Search", class: "btn btn-outline-warning my-2 my-sm-0"  %>
<% end %>
